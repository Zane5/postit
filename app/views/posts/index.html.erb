
<%= render 'shared/content_title', title: t(".All FMPosts")%>

<% @posts.each do |post|%>
	<%= render 'post', post: post %>
<% end %>

<ul>
	<% @posts.each do |post| %>
		<li> 
			<%= link_to post.title, post_path(post) %>
			<% if logged_in? %>
				[<%= link_to 'edit', edit_post_path(post) %>]
			<% end %>
		</li>
	<% end %>
</ul>

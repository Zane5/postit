	<div class='row'>
		<div id = "post_vote_error_<%= post.to_param %>" class='alert alert-error' style="display: none">
				You can only vote on a post one time!
		</div>
		
		<div class='span0 well text-center'>
			<% if logged_in? %>
				<%= link_to vote_post_path(post, vote: true), method: 'post', remote: true do %>
					<i class='icon-arrow-up'></i>
				<% end %>
				<br/>
			<% end %>

			<span id='post_<%=post.slug%>_votes'><%= post.total_votes %></span>
			<br/>
			<% if logged_in? %>
				<%= link_to vote_post_path(post, vote: false), method: 'post', remote: true do %>
					<i class='icon-arrow-down'></i>
				<% end %>
				<br/>	
			<% end %>	
		</div>


		<div class='span8 well'>
			<%= render post.categories %>
 			<h4><%= link_to post.title, post_path(post) %></h4>
      <small>
        <%= t(".homepage") %>
        <%= link_to post.url,  fix_url(post.url) %>
			</small>
      <p><%= post.description %></p>
			<p>
      <span class='quite'> <%= t(".posted by") %> </span> <%= link_to post.creator.username, user_path(post.creator) %>
    <small><%= t(".at") %> <%= display_datetime(post.created_at) %></small>
			</p>
			<small>
				<span>
          <%= link_to("#{post.comments.size}  #{t(".comments")}  ", post_path(post)) %>
			 	</span>
			</small>
		</div>
	</div>

 <ul class="nav">
  <li>
    <%= link_to t(".FMPost"), root_path, :class => 'brand' %>
  </li>
  

	<div class='btn-group nav_item'>
		<%= link_to '#', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown' do %>
      <%= t(".FMCategories") %> <span class='caret'></span>
		<% end %>
		<ul class='dropdown-menu'>
			<% Category.all.each do |category| %>
				<li>
					<%= link_to category.name, category_path(category) %>
				
				</li>
			<% end %>
			<% if logged_in? and current_user.admin? %>
				<li class='divider'></li>
				<li>
					<%= link_to(new_category_path) do %>
						<i class='icon-plus'></i>
            <%= t(".New Category") %>
					<% end %>
				</li>
			 <% end %>
		</ul>
	</div>

	<% if logged_in? %>
		<div class='nav_item'>
			<%= link_to t('.New FMPost'), new_post_path, class: 'btn btn-success btn-small'%>
		</div>
		<div class='btn-group nav_item'>
		<%= link_to('', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown') do %>
			<%= current_user.username %>
			<span class='caret'></span>
		<% end %>
		<ul class='dropdown-menu'>
			<li>
				<%= link_to edit_user_path(current_user) do %>
					<i class='icon-pencil'></i>
          <%= t(".Edit Profile") %> 
				<% end %>
			</li>
			<li>
				<%= link_to user_path(current_user) do %>
					<i class='icon-user'></i>
          <%= t(".View Profile") %> 
				<% end %>
			</li>
			<li>
				<%= link_to logout_path do %>
					<i class='icon-circle-arrow-left'></i>
          <%= t(".logout") %>
				<% end %>
			</li>
		</ul>
		</div>
	<% else # logged out%>
		 <div class='nav_item'>
			<%= link_to 'Register', register_path, class: 'btn btn-success btn-small'%>
		</div>
	  <div class='nav_item'>
			<%= link_to 'Lot in', login_path, class: 'btn btn-success btn-small'%>
		</div>
	<% end %>

</ul>
